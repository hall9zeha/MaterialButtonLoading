<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ButtonLoading">
        <attr name="text" format="string"/>
        <attr name="textColor" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="strokeWidth" format="dimension|reference"/>
        <attr name="allCaps" format="boolean"/>
        <attr name="cornerRadius" format="dimension|reference"/>
        <attr name="colorStroke" format="string|reference"/>
        <attr name="colorBackground" format="string|reference"/>
        <attr name="colorRipple" format="string|reference"/>
        <attr name="progressColor" format="string|reference"/>
        <attr name="progressType" format="enum">
            <enum name="circular" value="0"/>
            <enum name="dots" value="1"/>
        </attr>
        <attr name="loading" format="boolean"/>
        <attr name="enabled" format="boolean"/>
        <attr name="progressIndicator" format="reference"/>
        <attr name="styleButton">
            <enum name="normal" value="0"/>
            <enum name="outline" value="1"/>
            <enum name="text" value="2"/>
        </attr>

    </declare-styleable>

</resources>